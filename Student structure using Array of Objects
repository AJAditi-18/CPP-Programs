#include <iostream>
using namespace std;
 
    struct Student{
        string name;
        int rno;
        float marks;
    };
   
    int main(){
        Student st[5];
        int n, i;
        cout<< "Enter the number of students: ";
        cin>> n;
        for(i=0; i<n; i++){
        cout << "Enter roll no of Student" << i+1 << ": ";
        cin >> st[i].rno;
        cout << "Enter name of Student" << i+1 << ": ";
        cin >> st[i].name;
        cout << "Enter marks of Student" << i+1 << ": ";
        cin >> st[i].marks;
        }
        
cout << "Info \n";
        for(i=0; i<n; i++){
        cout << "Name: " << st[i].name << endl;
        cout << "Roll no: " << st[i].rno << endl;
        cout << "Marks: " << st[i].marks << endl;
        }

    return 0;
}
