// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

class Num{
    int x;
    public:
    int CheckOddEven(int x){
        if(x%2==0){
            return 0;
        }else{
            return 1;
        }
    }
    int CheckPrime(){
        if (x <= 1)
        return 0;

    // Check from 2 to n-1
    for (int i = 2; i < x; i++)
        if (x % i == 0)
            return 0;
            
        return 1;
    }
    int Input(){
        cout<< "Enter an integer: ";
        cin>> x;
        cout<< endl;
        return x;
    }
};
int main() {
    Num N;
    int num = N.Input();
    int res= N.CheckOddEven(num);
    if(res==0){
        cout<< "Number is even";
    }
    else{
        cout << "\nNumber is odd";
        int prime= N.CheckPrime();
        if(prime==1){
            cout << "\nNumber is odd and prime";
        }
        else{
            cout << "\nNumber is odd, but not prime";
        }
    }
    return 0;
}
