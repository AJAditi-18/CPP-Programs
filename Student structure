#include <iostream>
using namespace std;
 
    struct Student{
        string name;
        int rno;
        float marks;
    };
   
    int main(){
        Student st;
        int n;
        cout<< "Enter the number of students: ";
        cin>> n;
        for(int i=0; i<n; i++){
        cout << "Enter roll no of Student" << i+1 << ": ";
        cin >> st.rno;
        cout << "Enter name of Student" << i+1 << ": ";
        cin >> st.name;
        cout << "Enter marks of Student" << i+1 << ": ";
        cin >> st.marks;
        }
cout << "Info \n";
        for(int i=0; i<n; i++){
        cout << "Name: " << st.name << endl;
        cout << "Roll no: " << st.rno << endl;
        cout << "Marks: " << st.marks << endl;
        }

    return 0;
}
