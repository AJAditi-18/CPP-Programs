#include <iostream>
using namespace std;

int main() {
    int n;
    float sum = 0, num;

    cout << "Enter the number of terms: ";
    cin >> n;
    for (int i = 1; i <= n; i++) {
        cout << "Enter number " << i << ": ";
        cin >> num;
        sum += num;
    }
    float avg = sum / n;
    cout << "The average is: " << avg << endl;

    return 0;
}
